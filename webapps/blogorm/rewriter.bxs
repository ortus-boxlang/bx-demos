if(cgi.path_info.findNoCase("/post")) {
	slug = cgi.path_info.replaceNoCase("/post/","");
	post = application.blogService.getPostBySlug(slug);
	if(!post) bx:location url="/";
	
	include "post.bxm";

} else if(cgi.path_info.findNoCase("/tag")) {
	tag = cgi.path_info.replacenocase("/tag/","");
	tag = application.blogService.getTagByName(tag);
	if(!tag) bx:location url="/";

	include "tag.bxm";
}