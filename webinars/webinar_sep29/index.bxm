<bx:script>
cookbooks = application.recipeService.getCookbooks();
</bx:script>

<bx:component template="tags/layout.bxm" title="My Recipe Site">

	<h2>Cookbooks</h2>

	<bx:if cookbooks.recordCount gte 1>
		<ul>
		<bx:output query="cookbooks">
			<li><a href="cookbook.bxm?id=#id#">#name#</a></li>
		</bx:output>
		</ul>
	<bx:else>
		No cookbooks - get to cooking!
	</bx:if>

	<p>
	<a href="recipe_edit.bxm">Add Recipe</a>
	</p>

</bx:component>

